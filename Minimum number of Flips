#include <stdio.h>
#include<stdlib.h>
int main(void) {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--)
	{
	   int n;
	   scanf("%d",&n);
	   int a[n],i,sum=0;
	       for(i=0;i<n;i++)
	       {
	           scanf("%d",&a[i]);
	           if (a[i]==1) sum++;
	       }
	       if(n%2==0)
	       printf("%d\n",abs(sum-n/2));
	       else printf("-1\n");
	}
	return 0;
}

