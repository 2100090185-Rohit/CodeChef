#include <stdio.h>

int main(void) {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int n;
	    scanf("%d",&n);
	    int x[n],p=0;
	    for(int i=0;i<n;i++)
	   {
	       scanf("%d",&x[i]);
	       if(x[i]!=0)
	       {
	           p=i;
	       }
	   }
	   printf("%d\n",p);
	   p=0;
	}

}
