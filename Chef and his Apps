#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin >>t;
	while(t--){
	    int s,x,y,z,gr,sm;
	    cin>>s>>x>>y>>z;
	    if(x>=y){
	        gr=x;
	        sm=y;
	    }
	    else{
	        gr=y;
	        sm=x;
	    }
	    if(s-x-y >= z){
	        cout<<0<<endl;
	    }
	    else{
	        if(s-x-y+sm >=z || s-x-y+gr >=z){
	            cout<<1<<endl;
	        }
	        else {
	            cout<<2<<endl;
	        }
	        
	    }
	}    
}
